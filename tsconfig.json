{
  "compilerOptions": {
    "target": "ES6",
    "esModuleInterop": true,
    "module": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true
  },
  "include": ["*.ts", "__tests__"],
  "exclude": ["node_modules"]
}
